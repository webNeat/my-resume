{
  "core": {
    "views": [
      {
        "src": "src/french.jade",
        "dest": "build/french.html"
      },
      {
        "src": "src/english.jade",
        "dest": "build/english.html"
      }
    ],
    "scripts": [
      {
        "src": [
          "src/main.js"
        ],
        "dest": "build/js/main.js"
      }
    ],
    "styles": {
      "src": "src/style.less",
      "path": ["src", "bower_components"],
      "dest": "build/css/main.css"
    },
    "imgs": {
      "src": "src/imgs/*",
      "dest": "build/imgs"
    },
    "files": {
      "src": "data/*",
      "dest": "build/data"
    }
  },
  "vendors": {
    "base": {
      "js": {
        "src": [
          "bower_components/jquery/build/jquery.js",
          "bower_components/angular/angular.js"
        ],
        "dest": "build/js/vendors.js"
      },
      "css": {
        "src": [
          "bower_components/fontawesome/css/font-awesome.css",
          "bower_components/normalize.css/normalize.css"
        ],
        "dest": "build/css/vendors.css"
      },
      "fonts": {
        "src": [
          "bower_components/fontawesome/fonts/*"
        ],
        "dest": "build/fonts"
      }
    }
  }
}
